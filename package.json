{
  "name": "daveallie.com",
  "private": true,
  "description": "Codebase for daveallie.com",
  "version": "3.3.0",
  "author": "Dave Allie <dave@daveallie.com>",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "clean": "rm -r public",
    "develop": "gatsby develop",
    "check-types": "tsc --noEmit",
    "lint": "yarn lint:prettier && yarn lint:stylelint && yarn check-types",
    "lint:stylelint": "stylelint 'src/**/*.scss' --customSyntax postcss-scss",
    "lint:prettier": "prettier --write '{src,api,config,gatsby}/**/*.{ts,tsx,js,jsx,json,md}' '*.{ts,tsx,js,jsx,json,md}'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daveallie/daveallie.com"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "file-icons-js": "^1.1.0",
    "gatsby": "^4.8.1",
    "gatsby-image": "^3.11.0",
    "gatsby-plugin-env-variables": "^2.2.0",
    "gatsby-plugin-feed": "^4.8.0",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-google-gtag": "^4.8.0",
    "gatsby-plugin-manifest": "^4.8.1",
    "gatsby-plugin-mdx": "^3.8.1",
    "gatsby-plugin-mdx-source-name": "^1.0.1",
    "gatsby-plugin-react-helmet": "^5.8.0",
    "gatsby-plugin-robots-txt": "^1.7.0",
    "gatsby-plugin-sass": "^5.8.0",
    "gatsby-plugin-sharp": "^4.8.1",
    "gatsby-plugin-sitemap": "^5.8.0",
    "gatsby-plugin-typescript": "^4.8.1",
    "gatsby-remark-copy-linked-files": "^5.8.0",
    "gatsby-remark-images": "^6.8.1",
    "gatsby-source-filesystem": "^4.8.1",
    "gatsby-transformer-sharp": "4.8.0",
    "jsonp": "^0.2.1",
    "lodash": "^4.17.21",
    "node-sass": "^5.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.2.2",
    "react-swipeable": "^6.2.0",
    "react-syntax-highlighter": "^15.4.5",
    "sass": "^1.49.9"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/jsonp": "^0.2.1",
    "@types/node": "^17.0.21",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.12",
    "@types/react-helmet": "^6.1.5",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@vercel/node": "^1.13.0",
    "aws-sdk": "^2.1083.0",
    "classnames": "^2.3.1",
    "husky": "^7.0.4",
    "lint-staged": ">=12.3.4",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "stylelint": "14.5.3",
    "stylelint-config-recommended": "^7.0.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.scss": "yarn lint:stylelint",
    "*.{ts,tsx,js,jsx,json,md}": "yarn lint:prettier",
    "*.{ts,tsx}": "bash -c 'tsc --noEmit --pretty'"
  }
}
