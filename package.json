{
  "name": "daveallie.com",
  "private": true,
  "description": "Codebase for daveallie.com",
  "version": "3.3.0",
  "author": "Dave Allie <dave@daveallie.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "husky install",
    "build": "gatsby build",
    "clean": "rm -r public",
    "develop": "gatsby develop",
    "check-types": "tsc --noEmit",
    "lint": "yarn lint:prettier && yarn lint:stylelint && yarn check-types",
    "lint:stylelint": "stylelint 'src/**/*.scss' --customSyntax postcss-scss",
    "lint:prettier": "prettier '{src,api,config,gatsby}/**/*.{ts,tsx,js,jsx,json,md}' '*.{ts,tsx,js,jsx,json,md}'",
    "lint:prettier:fix": "yarn lint:prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/daveallie/daveallie.com"
  },
  "dependencies": {
    "@mdx-js/react": "^2.3.0",
    "file-icons-js": "^1.1.0",
    "gatsby": "^5.12.9",
    "gatsby-plugin-env-variables": "^2.3.0",
    "gatsby-plugin-feed": "^5.12.3",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-google-gtag": "^5.12.3",
    "gatsby-plugin-image": "^3.12.3",
    "gatsby-plugin-manifest": "^5.12.3",
    "gatsby-plugin-mdx": "^5.12.3",
    "gatsby-plugin-mdx-source-name": "^1.0.1",
    "gatsby-plugin-react-helmet": "^6.12.0",
    "gatsby-plugin-robots-txt": "^1.8.0",
    "gatsby-plugin-sass": "^6.12.3",
    "gatsby-plugin-sharp": "^5.12.3",
    "gatsby-plugin-sitemap": "^6.12.3",
    "gatsby-plugin-typescript": "^5.12.1",
    "gatsby-remark-copy-linked-files": "^6.12.0",
    "gatsby-remark-images": "^7.12.3",
    "gatsby-source-filesystem": "^5.12.1",
    "gatsby-transformer-sharp": "5.12.3",
    "jsonp": "^0.2.1",
    "lodash": "^4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.18.0",
    "react-swipeable": "^7.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "reading-time": "^1.5.0",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.1",
    "@types/jsonp": "^0.2.3",
    "@types/node": "~20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@types/react-helmet": "^6.1.9",
    "@types/react-syntax-highlighter": "^15.5.10",
    "@vercel/node": "^3.0.9",
    "aws-sdk": "^2.1493.0",
    "classnames": "^2.3.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "stylelint": "15.11.0",
    "stylelint-config-recommended": "^13.0.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.scss": "yarn lint:stylelint",
    "*.{ts,tsx,js,jsx,json,md}": "yarn lint:prettier",
    "*.{ts,tsx}": "bash -c 'tsc --noEmit --pretty'"
  },
  "packageManager": "yarn@4.0.1"
}
