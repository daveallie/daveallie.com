{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "sourceMap": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["node"],
    "lib": ["dom", "es2015", "es2017"],
    "jsx": "preserve",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "paths": {
      "~*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "api/**/*"],
  "exclude": [
    "node_modules",
  ]
}
